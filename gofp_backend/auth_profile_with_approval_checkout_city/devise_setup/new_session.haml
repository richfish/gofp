-#Working my way around using devise controllers
-if (booking_id = params[:return_booking_id])
  -session[:return_booking_id] = booking_id

#sign_in
  .title Sign in
  =form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      =f.email_field :email, autofocus: true, required: 'required', class: 'form-control input-lg', placeholder: 'Email Address'
    .form-group
      =f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password'
    -if devise_mapping.rememberable?
      .form-group
        .checkbox
          %label
            =f.check_box :remember_me
            =f.label :remember_me, "Keep me logged in"

    %button{type: 'submit', class: 'btn btn-lg submit_button', :'data-disable-with' => disable_with('Submitting') } Submit
  =render "users/shared/links"


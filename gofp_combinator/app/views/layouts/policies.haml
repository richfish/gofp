      <script data-turbolinks-eval="false" src="/assets/ie/html5shiv.js" type="text/javascript"></script>
      <script data-turbolinks-eval="false" src="/assets/ie/respond.min.js" type="text/javascript"></script>

    =google_analytics

  %body
    #wrap
      =render "layouts/header"
      .container
        .row
          .col-sm-3
            .policies_sidebar
              .row
                .col-sm-12
                  =link_to "What/ Why?", policies_path
              .row
                .col-sm-12
                  =link_to "The Alerts", policies_the_texts_path
              .row
                .col-sm-12
                  =link_to "Geographic Compatibility", policies_geography_path
              .row
                .col-sm-12
                  =link_to "Grandfathering", policies_grandfathering_path
              .row
                .col-sm-12
                  =link_to "Payments", policies_payments_path
              .row
                .col-sm-12
                  =link_to "Cancellations", policies_cancellation_path
              .row
                .col-sm-12
                  =link_to "Unexpected SMS Failures", policies_failure_path

          .col-sm-9
            .policies_main
              =yield

              #booking_issues
                %h5 Need Immediate Assistance?
                %p
                  For quick support, email at
                  =link_to "support@birthdaytextalerts.com", "mailto:support@birthdaytextalerts.com", target: '_blank'
                  and we'll get in touch ASAP


    =render "layouts/footer_welcome"

    =include_view_js

-view_css :summary_card_2

.bootcamp_search_result__container
  .row
    .col-xs-3.col-md-2
      .bootcamp_search_result__instructor-image
        =image_tag "welcome/awkwardtable.jpg", height: 80, width: 80, style: 'border-radius:50%'
    .col-xs-9.col-md-10
      .row
        .col-xs-12
          .bootcamp_search_result__bootcamp-headline
            $500 Ruby on Rails Thing
            %span.bootcamp_search_result__tech-tag
              Thing1
            %span.bootcamp_search_result__tech-tag
              Thing2
      .row
        .col-xs-12
          %span=iconf('user')
          %span - 6 Weeks -
          %span $1800

      .row
        .col-xs-12{ style: 'margin-top:4px'}
          .bootcamp_search_result__ratings-line
            Instructor rated
            =iconf('star')
            =iconf('star')
            =iconf('star')
            =iconf('star')
            =iconf('star')
